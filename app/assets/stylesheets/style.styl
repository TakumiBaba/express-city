@import 'nib'

body
  padding 50px
  font 14px/1.6 Helvetica, Arial, Freesans, Clean, Sans-Serif
  color #333

a
  color #4183C4
  text-decoration none
  &:hover
    text-decoration underline

h1, h2, h3, h4, h5, h6
  margin 20px 0 10px
  padding 0
  font-weight bold
  & + p
    margin-top 0

h1
  font-size 28px
  color black

h2
  font-size 24px
  border-bottom 1px solid #CCC
  color black

h3
  font-size 18px

p, blockquote, ul, ol, dl, table, pre
  margin 15px 0

ul, ol
  padding-left 30px
  list-style-type disc
  li
    display list-item
    &:first-child
      margin-top 0

pre, code, tt
  font-size 12px
  font-family Consolas, "Liberation Mono", Courier, monospace

code, tt
  margin 0 2px
  padding 0px 5px
  white-space nowrap
  border 1px solid #EAEAEA
  background-color #F8F8F8
  border-radius 3px

pre
  background-color #F8F8F8
  border 1px solid #CCC
  font-size 13px
  line-height 19px
  overflow auto
  padding 6px 10px
  border-radius 3px
  code
    border none
    background-color transparent

.clearfix
  clearfix()